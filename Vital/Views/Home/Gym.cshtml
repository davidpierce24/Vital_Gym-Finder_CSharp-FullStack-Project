@{
    ViewData["Title"] = "Add a Gym";
}

<div class="container-main">
    <div class="row">
        <div class="col-12">
            <h2 class="display-3">@ViewBag.Gym.GymName</h2>
        </div>

    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="\images\theRock\The-Rock-Home-Gym.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="\images\theRock\The-Rocks-home-gyms.webp" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="\images\theRock\ironParadise2.jpeg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="row mt-2">
        <div class="col-6">
            <h5 class="h5"> Address: @ViewBag.Gym.Address1, @ViewBag.Gym.City, @ViewBag.Gym.State @ViewBag.Gym.Zip</h5>
        </div>
        <div class="col-6">
            <h5 class="h5">Hours: </h5>
            
        </div>
        <div class="row">
            <div class="col-6">
                <iframe frameborder="0" style="border:0" referrerpolicy="no-referrer-when-downgrade"
                    src="https://www.google.com/maps/embed/v1/place?key=@ViewBag.MapsApi&q=@ViewBag.Gym.Address1,@ViewBag.Gym.City,@ViewBag.Gym.State,@ViewBag.Gym.Zip"
                    allowfullscreen>
                </iframe>
            </div>
            <div class="col-6">
                <button type="button" class="btn btn-info fs-5" data-bs-toggle="modal" data-bs-target="#equipmentModal">
                    <i class="bi bi-plus"></i>
                    Add Hours
                </button>
                <div class="modal fade" id="equipmentModal" tabindex="-1" aria-labelledby="equipmentModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content text-black">
                            <partial name="_AddEquipmentForm" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">

        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-info fs-5" data-bs-toggle="modal" data-bs-target="#equipmentModal">
                    <i class="bi bi-plus"></i>
                    Add Equipment
                </button>
                <div class="modal fade" id="equipmentModal" tabindex="-1" aria-labelledby="equipmentModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content text-black">
                            <partial name="_AddEquipmentForm" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">

            </div>
            <div class="col">

            </div>
            <div class="col">

            </div>
        </div>
    </div>

</div>