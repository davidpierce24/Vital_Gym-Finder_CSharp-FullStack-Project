@model User

<form action="/user/register" method="post" class="fs-5">
    <div>
        <label for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control mb-2">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div>
        <label for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control mb-2">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div>
        <label for="Username">Username</label>
        <input asp-for="Username" class="form-control mb-2">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div>
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control mb-2">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label for="Password">Password</label>
        <input asp-for="Password" class="form-control mb-2">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <label for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control mb-2">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Register" class="btn btn-info">
    </div>
</form>