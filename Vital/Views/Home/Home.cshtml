@{
    ViewData["Title"] = "Home Page";
}

<div class="container-main">
    <h1 class="text-center mt-2">Find The Right Gym For You</h1>

    <div class="row">
        @foreach (Gym g in ViewBag.Gyms)
        {
            <div class="col-2">
                <div class="card " id="home-card">
                    <img src="\images\theRock\ironParadise2.jpeg" alt="#" class="card-img-top">
                    <div class="card-body d-flex">
                            <h5 class="card-title fs-5">@g.GymName</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
