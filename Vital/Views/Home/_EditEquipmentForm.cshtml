@model Equipment

@foreach (Equipment e in ViewBag.Gym.GymEquipment)
{ 
    <form action="/equipment/edit/@e.GymId" method="post" class="gap-2 fs-4">
        <div class="form-group mx-2 mt-2 mb-2">
            <label for="EquipmentName">Equiment or Feature Name</label>
            <input asp-for="EquipmentName" class="form-control" value="@e.EquipmentName">
            <span asp-validation-for="EquipmentName" class="text-danger"></span>
        </div>
        <div class="form-group mx-2 mt-2 mb-2">
            <label for="EquipmentAmount">Amount or Size</label>
            <input asp-for="EquipmentAmount" class="form-control" value="@e.EquipmentAmount">
            <span asp-validation-for="EquipmentAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="EquipmentId" class="form-control" value="@e.EquipmentId">
        </div>
        <div class="form-group mx-2 mt-2 mb-2">
            <input type="submit" class="btn btn-info fs-5" value="Edit Equipment">
        </div>
    </form>
}